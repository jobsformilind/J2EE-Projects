<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="helloWorldActionForm" type="com.test.struts1.hello.world.HelloWorldActionForm" />
	</form-beans>

	<action-mappings>
		<action path="/helloWorld" type="com.test.struts1.hello.world.HelloWorldAction" name="helloWorldActionForm">
			<forward name="success" path="/HelloWorld.jsp" />
		</action>
	</action-mappings>

</struts-config>